rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // User profile and all subcollections
    match /users/{userId} {
      // User can read/write their own profile
      allow read, write: if isOwner(userId);
      
      // All subcollections (expenses, income, budgets, goals, etc.)
      match /{document=**} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Public data collection (if needed for shared features)
    match /public/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Admin collection (for system data)
    match /admin/{document=**} {
      allow read, write: if false; // Restrict to Firebase Admin SDK only
    }
  }
}
